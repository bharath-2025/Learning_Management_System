<script>
       var message = "Knowledge Base Learning"
       var message2 = "..."
       var speed = 200;
       var speed2 = 700;

       var display = document.getElementById("display-about");
       var book = document.getElementById("book-icon");


        var i = 0;
        var val = 0;
        var j = 0;
       function AutoDescp(){

            if(j == message2.length){
                j = 0;
                display.innerHTML = "";
            }

            if(val == 6 && i < message.length){
                book.classList.remove("fa-book");
                book.classList.add("fa-book-open");
                display.innerHTML += message.charAt(i);
                i++;
                setTimeout(AutoDescp,speed);
            }  
            else if(i < message.length){

                display.innerHTML += message2.charAt(j);
                j++;
                setTimeout(AutoDescp,speed2);
                val++;
            }
            console.log(val);
       }

       window.onload = AutoDescp;

</script>